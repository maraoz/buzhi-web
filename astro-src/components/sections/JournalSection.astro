---
import ApproachTitleShape from '../svg/ApproachTitleShape.astro';
import DotsGroupShape from '../svg/DotsGroupShape.astro';
---

<section class="journal-area" id="blog">
    <div class="container">
        <div class="jurnal-section-title">
            <div class="our-approach-title">
                <div class="shpae">
                    <ApproachTitleShape />
                    <ApproachTitleShape />
                    <ApproachTitleShape />
                    <ApproachTitleShape />
                    <ApproachTitleShape />
                </div>
                <h2>BUZHI
                    <span>journal</span></h2>
            </div>
            <div class="dots-group-shape">
                <DotsGroupShape />
            </div>
        </div>
        <div class="journal-wrapper">
            <a href="/blog/how-we-like-to-invest" class="single-journal">
